# ~/.config/zathura/zathurarc
# Gruvbox Dark theme for Zathura

# Background and foreground colors
set default-bg "#1d2021"
set default-fg "#ebdbb2"

# Statusbar colors
set statusbar-bg "#3c3836"
set statusbar-fg "#ebdbb2"
set statusbar-h-padding 10
set statusbar-v-padding 5

# Input bar colors
set inputbar-bg "#1d2021"
set inputbar-fg "#ebdbb2"

# Notification colors
set notification-bg "#1d2021"
set notification-fg "#ebdbb2"
set notification-error-bg "#cc241d"
set notification-error-fg "#ebdbb2"
set notification-warning-bg "#d79921"
set notification-warning-fg "#1d2021"

# Completion colors
set completion-bg "#3c3836"
set completion-fg "#ebdbb2"
set completion-highlight-bg "#d79921"
set completion-highlight-fg "#1d2021"
set completion-group-bg "#3c3836"
set completion-group-fg "#928374"

# Index colors
set index-bg "#1d2021"
set index-fg "#ebdbb2"
set index-active-bg "#d79921"
set index-active-fg "#1d2021"

# Recolor (dark mode for PDFs)
set recolor true
set recolor-lightcolor "#1d2021"
set recolor-darkcolor "#ebdbb2"
set recolor-keephue true
set recolor-reverse-video true

# Highlight search results
set highlight-color "#d79921"
set highlight-active-color "#cc241d"

# Performance and behavior
set smooth-scroll true
set scroll-step 50
set zoom-step 10
set page-padding 5

# Window title
set window-title-basename true
set window-title-page true

# Font
set font "JetBrainsMono Nerd Font normal 10"

# Adjust mode
set adjust-open "best-fit"
set pages-per-row 1
set scroll-page-aware true
set first-page-column 1:2
